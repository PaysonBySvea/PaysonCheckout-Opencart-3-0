{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>    
            <ul class="breadcrumb">
              {% for breadcrumb in breadcrumbs %}
              <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
              {% endfor %}
            </ul>   
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}    
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>{{ text_edit }}</h3>
            </div>
            <div class="panel-body">   
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">     
                    <ul class="nav nav-tabs">
                       <li class="active"><a href="#tab-api" data-toggle="tab">{{ tab_api }}</a></li>
                       <li><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
                       <li><a href="#tab-order-status" data-toggle="tab">{{ tab_order_status }}</a></li>
                       <li><a href="#tab-checkout-scheme" data-toggle="tab">{{ tab_checkout_scheme }}</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-api">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-modul-version">{{ text_modul_name}} V- {{ payment_paysonCheckout2_modul_version }}</label>
                                <div class="col-sm-10" hidden>
                                    <input type="text" name="payment_paysonCheckout2_modul_version" hidden value="{{ text_modul_version }}" placeholder="{{ text_modul_version }}" id="input-modul-version" class="form-control" />
                                </div>
                            </div>
                                
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="input-merchant-id"><span data-toggle="tooltip" title="{{help_merchant_id}}">{{merchant_id}}</span></label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_paysonCheckout2_merchant_id" value="{{payment_paysonCheckout2_merchant_id}}" placeholder="{{merchant_id}}" id="input-merchant-id" class="form-control" />
                                    {% if error_merchant_id %}
                                    <div class="text-danger">{{error_merchant_id}}</div>
                                    {% endif %}
                                </div>
                            </div>
                                
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="input-api-key"><span data-toggle="tooltip" title="{{help_api_key}}">{{api_key}}</span></label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_paysonCheckout2_api_key" value="{{payment_paysonCheckout2_api_key}}" placeholder="{{api_key}}" id="input-api-key" class="form-control" />
                                    {% if error_api_key %}
                                    <div class="text-danger">{{ error_api_key }}</div>
                                    {% endif %}
                                </div>
                            </div>
                                
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-method-mode"><span data-toggle="tooltip" title="{{ help_method_mode }}">{{ entry_method_mode }}</span></label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_mode" id="input-method-mode" class="form-control">
                                        <option value="1" {{(payment_paysonCheckout2_mode== 1 ? 'selected="selected"' : '""')}}> {{text_method_mode_live}}</option>
                                        <option value="0" {{(payment_paysonCheckout2_mode == 0 ? 'selected="selected"' : '""')}}>{{text_method_mode_sandbox}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="tab-general">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_paysonCheckout2_sort_order" value="{{ payment_paysonCheckout2_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                                </div>
                            </div>
                        
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_status" id="input-status" class="form-control">
                                        {% if payment_paysonCheckout2_status %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0"> {{ text_disabled }}</option>
                                        {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                                    
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-logg"><span data-toggle="tooltip" title="{{help_logg}}">{{entry_logg}}</span></label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_logg" id="input-logg" class="form-control">
                                        <option value="1" {{ (payment_paysonCheckout2_logg == 1 ? 'selected="selected"' : '""') }}> {{text_enabled}}</option>
                                        <option value="0" {{ (payment_paysonCheckout2_logg == 0 ? 'selected="selected"' : '""') }}>{{text_disabled}}</option>  
                                    </select>
                                </div>
                            </div>
                                    
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{help_total}}">{{entry_total}}</span></label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_paysonCheckout2_total" value="{{payment_paysonCheckout2_total}}" placeholder="{{entry_total}}" id="input-total" class="form-control" />
                                </div>
                            </div>
 
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_geo_zone_id" id="input-geo-zone" class="form-control">
                                        <option value="0">{{ text_all_zones }}</option>
                                        {% for geo_zone in geo_zones %}
                                        {% if geo_zone.geo_zone_id == payment_paysonCheckout2_geo_zone_id %}
                                        <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                                        {% else %}
                                        <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                        {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                                    
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-verification"><span data-toggle="tooltip" title="{{help_verification}}">{{entry_verification}}</span></label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_gui_verification" id="input-verification" class="form-control">
                                        <option value="1" {{ (payment_paysonCheckout2_gui_verification?'selected':'') }}>{{ text_verification_bankid }}</option>
                                        <option value="0" {{ (payment_paysonCheckout2_gui_verification?'':'selected') }}>{{ text_verification_none }}</option>      
                                    </select>
                                </div>
                            </div>
                                    
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-phone"><span data-toggle="tooltip" title="{{help_request_phone}}">{{entry_phone}}</span></label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_request_phone" id="input-phone" class="form-control">
                                        <option value="1" {{ (payment_paysonCheckout2_request_phone?'selected':'') }}>{{ text_phone_yes }}</option>
                                        <option value="0" {{ (payment_paysonCheckout2_request_phone?'':'selected') }}>{{ text_phone_no }}</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-receipt"><span data-toggle="tooltip" title="{{help_receipt}}">{{entry_show_receipt_page}}</span></label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_receipt" id="input-receipt" class="form-control">  
                                        <option value="1" {{ (payment_paysonCheckout2_receipt == 1 ? 'selected="selected"' : '""') }}> {{entry_show_receipt_page_yes}}</option>
                                        <option value="0" {{ (payment_paysonCheckout2_receipt == 0 ? 'selected="selected"' : '""') }}>{{entry_show_receipt_page_no}}</option>  
                                    </select>
                                </div>
                            </div> 
                                    
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-secure-word"><span data-toggle="tooltip" title="{{help_secure_word}}">{{secure_word}}</span></label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_paysonCheckout2_secure_word" value="{{payment_paysonCheckout2_secure_word}}" placeholder="{{secure_word}}" id="input-secure-word" class="form-control" />
                                </div>
                            </div>
                                
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="input-ignored-order-totals"><span data-toggle="tooltip" title="{{ help_totals_to_ignore }}">{{ entry_totals_to_ignore }}</span></label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_paysonCheckout2_ignored_order_totals" value="{{ (payment_paysonCheckout2_ignored_order_totals == '' ? '' : payment_paysonCheckout2_ignored_order_totals)}}" placeholder="{{ entry_totals_to_ignore }}" id="input-ignored-order-totals" class="form-control" />
                                    {% if error_ignored_order_totals %}
                                    <div class="text-danger">{{ error_ignored_order_totals }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                                
                        <div class="tab-pane" id="tab-order-status">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_order_status_id" id="input-order-status" class="form-control">
                                        {% for order_status in order_statuses %}
                                        {% if order_status.order_status_id == payment_paysonCheckout2_order_status_id %}
                                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                        {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                        {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>  
                        </div>
                                    
                        <div class="tab-pane" id="tab-checkout-scheme">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-color-scheme"><span data-toggle="tooltip" title="{{help_color_scheme}}">{{entry_color_scheme}}</span></label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_color_scheme" id="input-color-scheme" class="form-control">   
                                        {% if payment_paysonCheckout2_color_scheme == false %}

                                        <option value="gray" selected="selected">{{text_color_scheme_gray}}</option>
                                        <option value="blue">{{text_color_scheme_blue}}</option>
                                        <option value="white">{{text_color_scheme_white}}</option>
                                        <option value=grayTextLogos">{{text_color_scheme_grayTextLogos}}</option>
                                        <option value="blueTextLogos">{{text_color_scheme_blueTextLogos}}</option>
                                        <option value="whiteTextLogos">{{text_color_scheme_whiteTextLogos}}</option>
                                        <option value="grayNoFooter">{{text_color_scheme_grayNoFooter}}</option>
                                        <option value="blueNoFooter">{{text_color_scheme_blueNoFooter}}</option>
                                        <option value="whiteNoFooter">{{text_color_scheme_whiteNoFooter}}</option>
                                        {% else %}
                                        <option>{{payment_paysonCheckout2_color_scheme}}</option>
                                        <option value="gray">{{text_color_scheme_gray}}</option>
                                        <option value="blue">{{text_color_scheme_blue}}</option>
                                        <option value="white">{{text_color_scheme_white}}</option>
                                        <option value="grayTextLogos">{{text_color_scheme_grayTextLogos}}</option>
                                        <option value="blueTextLogos">{{text_color_scheme_blueTextLogos}}</option>
                                        <option value="whiteTextLogos">{{text_color_scheme_whiteTextLogos}}</option>
                                        <option value="grayNoFooter">{{text_color_scheme_grayNoFooter}}</option>
                                        <option value="blueNoFooter">{{text_color_scheme_blueNoFooter}}</option>
                                        <option value="whiteNoFooter">{{text_color_scheme_whiteNoFooter}}</option>
                                        {% endif %}
                                    </select>                
                                </div>
                            </div>
                                    
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-iframe-size-width"><span data-toggle="tooltip" title=" {{ help_iframe_size_width }}"> {{ entry_iframe_size_width }}</span></label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_paysonCheckout2_iframe_size_width" value="{{payment_paysonCheckout2_iframe_size_width}}" placeholder="{{entry_iframe_size_width}}" id="input-iframe-size-width" class="form-control" />
                                </div>
                            </div> 
                                
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-iframe-size-width-type"><span data-toggle="tooltip" title="{{help_iframe_size_with_type}}">{{entry_iframe_size_width_type}}</span></label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_iframe_size_width_type" id="input-iframe_size_width_type" class="form-control">
                                        {% if payment_paysonCheckout2_iframe_size_width_type == false %}
                                        <option value="%" selected="selected">{{ text_iframe_size_width_percent }}</option>
                                        <option>{{ text_iframe_size_width_px }}</option> 
                                        {% else %}
                                        <option>{{ payment_paysonCheckout2_iframe_size_width_type }}</option>
                                        <option>{{ text_iframe_size_width_percent }}</option>
                                        <option>{{ text_iframe_size_width_px }}</option>    
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                                    
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-iframe-size-height"><span data-toggle="tooltip" title="{{help_iframe_size_height}}">{{entry_iframe_size_height}}</span></label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_paysonCheckout2_iframe_size_height" value="{{payment_paysonCheckout2_iframe_size_height}}" placeholder="{{entry_iframe_size_height}}" id="input-iframe-size-height" class="form-control" />
                                </div>
                            </div>
                                
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-iframe-size-height-type"><span data-toggle="tooltip" title="{{help_iframe_size_height_type}}">{{entry_iframe_size_height_type}}</span></label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_iframe_size_height_type" id="input-iframe_size_height_type" class="form-control">
                                        {% if payment_paysonCheckout2_iframe_size_height_type == false %}
                                        <option value="px" selected="selected">{{ text_iframe_size_height_px }}</option>
                                        <option>{{ text_iframe_size_height_percent }}</option> 
                                        {% else %}
                                        <option>{{ payment_paysonCheckout2_iframe_size_height_type }}</option>
                                        <option>{{ text_iframe_size_height_percent }}</option>
                                        <option>{{ text_iframe_size_height_px }}</option>    
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                                    
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-comments"><span data-toggle="tooltip" title="{{help_comments}}">{{entry_show_comments}}</span></label>
                                <div class="col-sm-10">
                                    <select name="payment_paysonCheckout2_comments" id="input-comments" class="form-control">  
                                        <option value="1" {{ (payment_paysonCheckout2_comments == 1 ? 'selected="selected"' : '""') }}> {{entry_show_comments_yes}}</option>
                                        <option value="0" {{ (payment_paysonCheckout2_comments == 0 ? 'selected="selected"' : '""') }}>{{entry_show_comments_no}}</option>  
                                    </select>
                                </div>
                            </div>  
                        </div>    
                    </div>
                </form>         
            </div>
        </div>
    </div>
</div>
{{ footer }}